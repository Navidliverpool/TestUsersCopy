@model IEnumerable<TestUsersCopy.Models.Motorcycle>

@{
    ViewBag.Title = "Index";
}
<style>
    * {
        box-sizing: border-box;
    }

    .column {
        /*float is the key to make the columns done. Without the flout attribute the output is in horizontal shape but with flout attribute it's in
            vertical shape.
        */
        float: left;
        width: 50%;
        padding: 10px;
        height: 300px;
    }



    .columnImage {
        float: left;
        width: 80%;
        padding: 10px;
    }

        .columnImage img {
            margin-left: 40px;
            margin-top: 20px;
        }

    .row:after {
        content: "";
        display: table;
        clear: both;
    }
</style>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<!-- At first I put these two divs inside or after <table> does not work because In the html tables, <table> tag expect <tr> tag right after itself and <tr> tag expect <td> tag right after itself -->
<div class="row">
    <div class="column" style="background-color:#aaa;">
        <!-- Grid images here-->
        @foreach (var item in Model)
        {
            <div class="col-sm-3">
                <div class="columnImage">
                    <table>
                        <tr>
                            <td>
                                <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" style="width:80%" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        }
    </div>
    <div class="column" style="background-color:#bbb;">
        <table class="table">
            <tr>
                <th>
                    <h4>Image</h4>
                </th>
                <th>
                    <h4>Model</h4>
                </th>
                <th>
                    <h4>Price</h4>
                </th>
                <th>
                    <h4>Brand</h4>
                </th>
                <th>
                    <h4>Category</h4>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.MotoCategory)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MotorcycleId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MotorcycleId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MotorcycleId })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

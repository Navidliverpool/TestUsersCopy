@model TestUsersCopy.Models.MotorcycleVM

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Motorcycles", FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
